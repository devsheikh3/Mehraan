<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/personcmntdpid"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/commentpersonnameid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/personcmntdpid"
        android:layout_alignBottom="@+id/personcmntdpid"
        android:layout_toRightOf="@+id/personcmntdpid"
        android:gravity="center_vertical"
        android:text="Person Name"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/timecommentid"
        android:layout_alignTop="@+id/personcmntdpid"
        android:layout_alignBottom="@+id/personcmntdpid"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:text="45 min ago"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textcommentid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/personcmntdpid"
        android:layout_toRightOf="@+id/personcmntdpid"
        android:text="Comments will be shown like this"
        android:padding="15dp"
        android:layout_alignRight="@+id/timecommentid"
        android:background="@drawable/grey_button"
        android:backgroundTint="@color/colorAccent"/>


</RelativeLayout>