<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EarnMoney"
    android:background="@color/colorAccent"
    >

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textStyle="normal"
        android:textSize="20sp"
        android:text="Earn money"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorPrimary"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        >

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/actionsid"
                >

                <ImageView
                    android:padding="5dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/filterbtnid"
                    android:src="@drawable/ic_tune_black_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    />

                <ImageView
                    android:padding="5dp"
                    android:id="@+id/locationbtnid"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_toLeftOf="@id/filterbtnid"
                    android:src="@drawable/ic_location_on_black_24dp"
                    android:layout_marginLeft="10dp"
                    />

                <androidx.appcompat.widget.SearchView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_toLeftOf="@+id/locationbtnid"

                    />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tasklistid"
                android:layout_below="@+id/actionsid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>